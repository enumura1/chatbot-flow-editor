{
  "name": "chatbot-flow-editor",
  "version": "0.1.4",
  "description": "A React-based chatbot flow editor library",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "docs"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/core",
    "dev": "npm run dev --workspace=packages/core",
    "build:core": "npm run build --workspace=packages/core",
    "dev:demo": "npm run dev --workspace=apps/editor-demo",
    "dev:samples": "npm run dev --workspace=apps/chatbot-samples",
    "docs:start": "npm run start --workspace=docs",
    "docs:build": "npm run build --workspace=docs",
    "docs:deploy": "npm run deploy --workspace=docs"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "rollup-plugin-visualizer": "^6.0.0",
    "typescript": "~5.6.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}