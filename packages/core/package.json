{
  "name": "@chatbot-flow-editor/core",
  "version": "1.0.0",
  "description": "Core chatbot flow editor components and utilities",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/style.css",
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "*",
    "@radix-ui/react-scroll-area": "*",
    "@radix-ui/react-slot": "*",
    "class-variance-authority": "*",
    "clsx": "*",
    "lucide-react": "*",
    "tailwind-merge": "*"
  },
  "devDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "@vitejs/plugin-react": "*",
    "@tailwindcss/vite": "*",
    "autoprefixer": "*",
    "postcss": "*",
    "tailwindcss": "*",
    "typescript": "*",
    "vite": "*",
    "vite-plugin-dts": "*"
  }
}
